    /* Colour palette inspired by the Experience4Grads logo */
    :root {
      --primary-blue: #285c92;
      --secondary-orange: #eb522b;
      --light-gray: #f5f5f5;
      --dark-gray: #1c2a3a;
      --white: #ffffff;
    }

    html, body {
      margin: 0;
      padding: 0;
      font-family: 'Arial', sans-serif;
      color: var(--dark-gray);
      background-color: var(--white);
      scroll-behavior: smooth;
    }

    /* NEW: ensure anchors arenâ€™t hidden under the sticky navbar */
    #options, #about, #contact { scroll-margin-top: 80px; }

    /* Navbar */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      background-color: var(--primary-blue);
      position: sticky;
      top: 0;
      z-index: 100;
    }
    .logo {
      /* Constrain the logo to a square container on the navigation bar.  Using
         object-fit: contain shows the entire graphic without cropping and
         prevents grey padding.  The dimensions match the nav bar height. */
      height: 60px;
      width: 60px;
      object-fit: contain;
    }
    .nav-links {
      list-style: none;
      display: flex;
      gap: 1.5rem;
      margin: 0;
      padding: 0;
    }
    .nav-links li a {
      color: var(--white);
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s ease;
    }
    .nav-links li a:hover {
      color: var(--secondary-orange);
    }

    /* Hero section */
    .hero {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 60vh;
      padding: 0 2rem;
      background: linear-gradient(135deg, var(--primary-blue) 60%, var(--secondary-orange) 100%);
      color: var(--white);
    }
    /* Light logo watermark behind the hero content */
    .hero-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0.1;
      /* Use the logo as a faint watermark behind the hero section */
      background-image: url('logo.jpeg');
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
    }

    /* On small screens the hero overlay can look cropped because mobile file
       viewers sometimes fail to load background images from local ZIP archives.
       To avoid showing a broken or partially rendered logo on phones, hide the
       overlay entirely for narrow viewports. The gradient background will
       remain visible behind the hero content. */
    @media (max-width: 768px) {
      .hero-overlay {
        display: none;
      }
    }
    .hero-content {
      position: relative;
      max-width: 800px;
      text-align: center;
      z-index: 1;
    }
    .hero-content h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }
    .hero-content p {
      font-size: 1.2rem;
      margin-bottom: 2rem;
      line-height: 1.4;
    }

    /* Buttons */
    .btn {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 600;
      transition: background-color 0.3s ease, color 0.3s ease;
    }
    .btn-primary {
      background-color: var(--secondary-orange);
      color: var(--white);
    }
    .btn-primary:hover {
      background-color: #c74522;
    }
    .btn-secondary {
      background-color: var(--primary-blue);
      color: var(--white);
    }
    .btn-secondary:hover {
      background-color: #173a60;
    }
    .btn-outline {
      border: 2px solid var(--primary-blue);
      background-color: transparent;
      color: var(--primary-blue);
    }
    .btn-outline:hover {
      background-color: var(--primary-blue);
      color: var(--white);
    }

    /* Container used for multiple CTA buttons in the hero */
    .hero-cta-row {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      justify-content: center;
      margin-top: 1rem;
    }

    /* Sections */
    section {
      padding: 4rem 2rem;
    }
    section h2 {
      text-align: center;
      margin-bottom: 2rem;
      color: var(--primary-blue);
    }

    /* Options section */
    .options-section {
      background-color: var(--primary-blue);
      padding: 4rem 2rem;
    }
    .options-section h2 {
      color: var(--white);
    }
    .option-cards {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
      justify-content: center;
      margin-top: 2rem;
    }
    .option-card {
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      max-width: 340px;
      width: 100%;
      text-align: center;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .option-card.skills {
      /* Make the Skills card orange like the Work Experience card. White text ensures good contrast. */
      background-color: var(--secondary-orange);
      color: var(--white);
    }
    .option-card.skills .btn {
      /* Use a blue button on the orange card for visual hierarchy */
      background-color: var(--primary-blue);
      color: var(--white);
    }
    .option-card.experience {
      background-color: var(--secondary-orange);
      color: var(--white);
    }
    .option-card.experience .btn {
      background-color: var(--primary-blue);
      color: var(--white);
    }
    .option-card h3 {
      margin-top: 0.75rem;
      margin-bottom: 0.5rem;
      color: inherit;
    }
    .option-card p {
      margin-bottom: 1.5rem;
      line-height: 1.4;
      color: inherit;
    }
    .profile-image {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 3rem;
      margin-bottom: 1rem;
      color: var(--white);
    }
    .profile-image.graduate {
      /* Use a blue circle with an orange cap to echo the brand colours. The emoji
         inherits the colour property set here, giving the hat an orange tint. */
      background-color: var(--primary-blue);
      color: var(--secondary-orange);
    }
    .profile-image.briefcase {
      background-color: var(--primary-blue);
    }

    /* About section */
    .about-section p {
      max-width: 700px;
      margin: 0 auto;
      line-height: 1.5;
    }

    /* Contact section */
    .contact-section p {
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.5;
    }
    .contact-section a {
      color: var(--secondary-orange);
      text-decoration: none;
      font-weight: 600;
    }
    .contact-section a:hover {
      text-decoration: underline;
    }

    /* Responsive layout adjustments */
    @media (max-width: 768px) {
      .option-cards {
        flex-direction: column;
        align-items: center;
      }
    }
